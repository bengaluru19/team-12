<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="211dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:text="Name"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/date"
        android:layout_width="129dp"

        android:layout_height="55dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:text="date" />

    <TextView
        android:id="@+id/location"
        android:layout_width="177dp"
        android:layout_height="51dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="56dp"
        android:layout_toRightOf="@+id/date"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:text="location" />

    <TextView
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:layout_below="@+id/location"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:text="number of participants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_of_participants"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:layout_below="@+id/location"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@+id/date"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="111dp"
        android:layout_height="21dp"
        android:layout_below="@+id/number_of_participants"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:text="description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/description"
        android:layout_width="367dp"
        android:layout_height="91dp"
        android:layout_below="@+id/number_of_participants"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:text="description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/materials_required"
        android:layout_width="368dp"
        android:layout_height="45dp"
        android:layout_below="@+id/description"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="372dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:text="materials required"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skill_set"
        android:layout_width="367dp"
        android:layout_height="45dp"
        android:layout_below="@+id/materials_required"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:text="skill set"
 />

    <Button
        android:id="@+id/register"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="548dp"
        android:text="Register"
 />

    <Button
        android:id="@+id/cancel"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="636dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>