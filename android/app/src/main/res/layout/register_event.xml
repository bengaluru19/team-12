<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="211dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="89dp" android:layout_marginStart="89dp"/>


    <TextView
        android:id="@+id/date"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:layout_below="@+id/name"
        android:text="date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="111dp"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="177dp"
        android:layout_height="51dp"
        android:layout_below="@+id/date"
        android:text="location"
        android:layout_marginEnd="33dp" android:layout_marginRight="33dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="111dp"/>

    <TextView
        android:id="@+id/number_of_participants"
        android:layout_width="365dp"
        android:layout_height="43dp"
        android:layout_below="@+id/location"
        android:text="number of participants"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="197dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="367dp"
        android:layout_height="91dp"
        android:layout_below="@+id/number_of_participants"
        android:text="description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"/>

    <TextView
        android:id="@+id/materials_required"
        android:layout_width="368dp"
        android:layout_height="45dp"
        android:layout_below="@+id/description"
        android:text="materials required"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="372dp"/>

    <TextView
        android:id="@+id/skill_set"
        android:layout_width="374dp"
        android:layout_height="64dp"
        android:layout_below="@+id/materials_required"
        android:text="skill set"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="448dp"/>

    <Button
        android:id="@+id/register"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Register" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="544dp"/>
    <Button
        android:id="@+id/cancel"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Cancel" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="632dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>


</android.support.constraint.ConstraintLayout>