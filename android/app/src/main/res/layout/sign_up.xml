<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:text="Enter Your Details"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro" />
        android:text="Email"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_field"
        android:background="@drawable/edittext_bg"/>

    <TextView
        android:id="@+id/email_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="Email"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_field"
        android:background="@drawable/edittext_bg"/>
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/age_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:text="age"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_field"
        android:background="@drawable/edittext_bg"/>
        android:inputType="text" />

    <TextView
        android:id="@+id/number_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:text="Number"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_field"
        android:background="@drawable/edittext_bg"/>
        android:inputType="text" />

    <TextView
        android:id="@+id/skill_set_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"
        android:text="Skill Set"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/skill_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skill_set_field"
        android:background="@drawable/edittext_bg"/>
        android:inputType="text" />

    <TextView
    android:id="@+id/city_field"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/skill_set"
    android:text="City"
    android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_field"
        android:background="@drawable/edittext_bg"/>
        android:inputType="text" />

    <TextView
        android:id="@+id/gender_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city"
        android:text="Gender"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender_field"
        android:background="@drawable/edittext_bg"/>
        android:inputType="text" />

    <Button
        android:id="@+id/submit"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/gender"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="submit"
        android:textColor="#fff"
        android:textSize="18sp" />



</RelativeLayout>